@model Empleado
@{
    ViewData["Title"] = "Crear Empleado";
}

<h1>Crear empleado</h1>
<h5>Registrar datos de empleado</h5>

<form asp-controller="Empleados" asp-action="Crear">
    <div class="mb-3">
        <label asp-for="EmpleadoNombre" class="form-label">        </label>
        <input type="text" asp-for="EmpleadoNombre" class="form-control" />
        <span asp-validation-for="EmpleadoNombre" class="text-danger"></span>
    </div>

<button type="submit" class="btn btn-primary">Enviar</button>

</form>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}
