@model Empleado
@{
    ViewData["Title"] = "Editar datos";
}

<h1>Editar Empleado</h1>
<h5>@Model.EmpleadoNombre</h5>

<form asp-action="Editar">
    <input type="hidden" asp-for="Id"/>
    <div class="mb-3">
        <label asp-for="EmpleadoNombre" class="form-label"></label>
        <input type="text" asp-for="EmpleadoNombre" class="form-control" />
        <span asp-validation-for="EmpleadoNombre" class="text-danger"></span>

    </div>

    <button type="submit" class="btn btn-primary">Editar</button>
    <a class="btn btn-secondary" asp-action="Index"> Cancelar</a>

</form>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}
