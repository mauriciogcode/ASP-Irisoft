@model Laboratorio
@{
    ViewData["Title"] = "Borrar Laboratorio";
}

<h1>Borrar laboratorio</h1>
<h5>Desea eliminar @Model.Nombre</h5>

<form asp-action="BorrarLaboratorio">
    <input type="hidden" asp-for="Id"/>
    <button type="submit" class="btn btn-danger">Eliminar</button>
    <a class="btn btn-secondary" asp-action="Index">Cancelar</a>

</form>
